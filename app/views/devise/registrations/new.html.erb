<%= turbo_frame_tag "modal" do %>
  <div
    data-controller="modal"
    data-action="click->modal#closeBackground"
    class="fixed inset-0 bg-black/50 flex items-center justify-center z-50">

    <div class="relative w-full max-w-md mx-4">
      <div class="auth-card h-auto">

        <button
          type="button"
          data-action="click->modal#close"
          class="absolute right-4 top-4 text-slate-400 hover:text-slate-700">
          ✕
        </button>

        <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center">
          Criar conta
        </h2>

        <%= form_for(resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { data: { turbo_frame: "_top" } }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mb-5">
            <%= f.label :name, class: "auth-label" %>
            <%= f.text_field :name,
              autofocus: true,
              class: "auth-input",
              placeholder: "Seu Nome" %>
          </div>

          <div class="field mb-5">
            <%= f.label :email, class: "auth-label" %>
            <%= f.email_field :email,
              autocomplete: "email",
              class: "auth-input",
              placeholder: "seu@email.com" %>
          </div>

          <div class="field mb-5">
            <div class="flex items-center gap-2">
              <%= f.label :password, class: "auth-label mb-0" %>
              <% if @minimum_password_length %>
                <span class="text-xs text-slate-400 font-normal">
                  (mínimo <%= @minimum_password_length %> caracteres)
                </span>
              <% end %>
            </div>

            <%= f.password_field :password,
              autocomplete: "new-password",
              class: "auth-input",
              placeholder: "••••••••" %>
          </div>

          <div class="field mb-6">
            <%= f.label :password_confirmation, class: "auth-label" %>
            <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "auth-input",
              placeholder: "••••••••" %>
          </div>

          <div class="actions mb-6">
            <%= f.submit "Cadastrar-se", class: "auth-btn-primary w-full" %>
          </div>
        <% end %>

        <div class="border-t border-slate-100 pt-6 text-center space-y-2">
          <%= link_to "Já tem conta? Entrar",
            new_session_path(resource_name),
            data: { turbo_frame: "modal" },
            class: "auth-link" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
