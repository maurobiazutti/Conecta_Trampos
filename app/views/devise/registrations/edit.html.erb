<div class="auth-container">
  <div class="auth-card">
    <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center">Editar Perfil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-5">
        <%= f.label :name, class: "auth-label" %>
        <%= f.text_field :name, autofocus: true, class: "auth-input", placeholder: "Seu Nome" %>
      </div>

      <div class="field mb-5">
        <%= f.label :email, class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 p-2 text-xs bg-amber-50 text-amber-700 rounded-lg border border-amber-100">
          Aguardando confirmação para: <strong><%= resource.unconfirmed_email %></strong>
        </div>
      <% end %>

      <div class="field mb-5">
        <div class="flex flex-col mb-1.5">
          <%= f.label :password, class: "auth-label mb-0" %>
          <span class="text-xs text-slate-400 font-normal italic">(deixe em branco se não quiser alterar)</span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input", placeholder: "Nova senha" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-slate-400 italic font-normal"><%= @minimum_password_length %> caracteres no mínimo</p>
        <% end %>
      </div>

      <div class="field mb-5">
        <%= f.label :password_confirmation, class: "auth-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input", placeholder: "Confirme a nova senha" %>
      </div>

      <div class="field mb-8 p-4 bg-slate-50 rounded-xl border border-slate-100">
        <div class="flex flex-col mb-1.5">
          <%= f.label :current_password, class: "auth-label mb-0 text-indigo-900" %>
          <span class="text-xs text-slate-500 font-normal italic">(precisamos da senha atual para confirmar as mudanças)</span>
        </div>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "auth-input border-slate-300" %>
      </div>

      <div class="actions mb-6">
        <%= f.submit "Atualizar Perfil", class: "auth-btn-primary" %>
      </div>
    <% end %>

    <div class="border-t border-slate-100 pt-8 mt-6">
      <h3 class="text-lg font-semibold text-red-600 mb-2">Zona de Perigo</h3>
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 bg-red-50 p-4 rounded-xl border border-red-100">
        <span class="text-sm text-red-700">Infeliz com a conta?</span>
        <%= button_to "Cancelar minha conta", registration_path(resource_name), 
            data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, 
            method: :delete, 
            class: "text-sm font-semibold text-red-600 hover:text-red-700 px-4 py-2 border border-red-200 rounded-lg hover:bg-red-100 transition-colors" %>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "← Voltar", :back, class: "auth-link text-slate-500" %>
    </div>
  </div>
</div>